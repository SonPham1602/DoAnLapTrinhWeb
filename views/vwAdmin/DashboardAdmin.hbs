<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>DashboardAdmin</title>
	<link rel="stylesheet" type="text/css" href="/public/css/DashboardAdmin.css">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
	<script src="https://cloud.tinymce.com/5/tinymce.min.js?apiKey=ezd73nxbzc7bu6e86g2l82jbbffke0mwevwrnyvc5q8h89j6"></script>
	<script>
  	$(function () {
      tinymce.init({
      selector: '#NoiDungBaiDang',
      height: 600,
      menubar: false,
      plugins: 'paste image link autolink lists table media',
      toolbar: [
        'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright',
        'forecolor backcolor',
        'table link image media',
      ],
    });
  })
</script>
</head>
<body>
	<div class="container">
		<div class="Menu-left">
			<div class="Avatar border-bot">
				<div class="avatar-picture">
					<img src="../images/avatar_writer.jpg" alt="">
				</div>
				<p class="nameWitter">
					Phạm Ngọc Sơn
				</p>
			</div>
			<div class="navigation">
				<nav>
					<ul>
						<li class="homepage" title="Trang chủ" id="li-trang-chu">
							<i class="fas fa-home icon"></i>
							<a href="#">
								Trang chủ
							</a>
						</li>
						<li>
							<i class="far fa-file-alt icon"></i>
							<a href="#">Danh sách độc giả</a>
							<i class="fas fa-angle-down icon"></i>
							<ul>
								<li id="li-quan-ly-doc-gia">
									<a href="#">Tất cả độc giả</a>
								</li>
								<li id="li-quan-ly-premium">
									<a href="#">Độc giả premium</a>
								</li>
							</ul>
						</li>
						<li id="li-quan-ly-phong-vien">
							<i class="far fa-edit icon"></i>
							<a href="#">Danh sách phóng viên</a>					
						</li>
						<li>
							<i class="far fa-edit icon"></i>
							<a href="#">Quản lý nội dung</a>
							<i class="fas fa-angle-down icon"></i>
							<ul>
								<li id="li-quan-ly-bai-viet">
									<a href="#">Quản lý bài viết</a>			
								</li>
								<li id="li-bai-viet-moi">
									<a href="#">Viết bài mới</a>	
								</li>
								<li id="li-quan-ly-nhan">
									<a href="#">Quản lí nhãn</a>
								</li>
								<li id="li-quan-ly-chuyen-muc">
									<a href="#">Quản lý chuyên mục</a>
								</li>
							</ul>
						</li>

					<!-- 	<li>
							<i class="fas fa-chart-line icon"></i>
							<a href="#">Thông kê</a>
							<i class="fas fa-angle-down icon"></i>
							<ul>
								<li>
									<a href="#">Bài viết</a>
								</li>
								<li>
									<a href="#">Tương tác</a>
								</li>

							</ul>

						</li>
						<li>
							<i class="fas fa-user-cog icon"></i>
							<a href="#">Cài đặt</a>
						</li> -->
					</ul>
				</nav>
			</div>
		</div>
		<div class="Content-right">
			<div class="header-container">
				<div class="nav-left">
					
				</div>
				<ul class="nav-right">
					<li class="thong_bao_dashboard item-nav-right">
						<span class="so_luong_thong_bao">3</span>
						<i class="far fa-bell icon-dashboard"></i>
						<ul id="thong-bao-drop-down-menu" class="drop-down-menu">
							<li class="border-bot">
								<i class="far fa-bell"></i>
								Thông báo
							</li>
							<li class="drop-down-item">
								<article class="border-bot">
									<a href="">Bài viết "Firefox chặn Add-on dùng kỹ thuật che giấu mã nguồn" đã được xuất bản
									</a>
								</article>
								
							</li>
							<li class="drop-down-item">
								<article class="border-bot">
									<a href="">Bài viết "Giá USD tự do lao dốc, thấp hơn ngân hàng" đã được xuất bản
									</a>
								</article>
							</li>
							<li class="drop-down-item">
								
								<article class="border-bot">
									<a href="">Bài viết "Lộ thông tin chi tiết mẫu smartphone Mate 30 Pro" đã bị từ chối
									</a>
								</article>
							</li>
							<li class="border-bot">
								<a href="">
									Xem tát cả thông báo
								</a>
								
								<i class="fas fa-arrow-right"></i>
							</li>
							
						</ul>
					</li>
					<li class="tin_nhan_dashboard item-nav-right">
						<span class="so_luong_tin_nhan">5</span>
						<i class="far fa-envelope icon-dashboard"></i>

					</li>
					<li class="user_dashboard item-nav-right">
						<img src="../images/avatar_writer.jpg" alt="">
						<ul id="user-drop-down-menu" class="drop-down-menu">
							<li class="drop-down-item">
								<a href="">
									<i class="fas fa-cog"></i>
									Cài đặt
								</a>
							</li>
							<li class="drop-down-item">
								<a href="">
									<i class="far fa-id-card"></i>
									Thông tin tài khoản
								</a>
							</li>
							<li class="drop-down-item">
								<a href="">
									<i class="far fa-envelope"></i>
									Tin nhắn
								</a>
							</li>
							<li class="drop-down-item">
								<a href="">
									<i class="fas fa-sign-out-alt"></i>
									Logout
								</a>
							</li>
						</ul>
					</li>
				</ul>
			</div>
			<!-- Trang chu -->
			
			<div class="DanhSachBaiVietDashboard panel">	  
				
			</div>

			<!-- Quản lý phóng viên -->
			<div class="QuanlyPhongVien panel">
				<p class="TieuDeTrang">Danh sách phóng viên</p>
					<div class="data-table">
					<table border="1px" class="table-danh-sach-bai-viet">
						<tr id="header-table">							
							<td>Tên phóng viên</td>
							<td>Email</td>
							<td>Chức năng</td>
						</tr>
						{{#each users3}}
						<tr>
							<td>{{name}}</td>
							<td>{{email}}</td>
							<td>
								<button class="btn-xem-bai-viet" onclick="window.location.href='/admin/1/user/{{id}}/edit'">Chỉnh sửa</button>
								<button class="btn-xem-bai-viet" onclick="window.location.href='/admin/1/user/{{id}}/delete'">
									<i class="far fa-trash-alt"></i> &nbsp Xoá
								</button>							
							</td>
						</tr>
						{{/each}}				
					</table>
					<button  onclick="window.location.href='/admin/1/user/add/{{id_type3}}'" class="btn-chuc-nang m-auto" style="margin-left: 240px; width:50px; margin-bottom: 20px; padding-left: 10px"> 
					<i class="fas fa-plus"></i> &nbsp</button>
				</div>
			</div>

				<!-- 	Quản lý độc giả premium-->
			<div class="QuanLyDocGiaPremium panel">
				<p class="TieuDeTrang">Danh sách độc giả Premium</p>
				<div class="data-table">
					<table border="1px" class="table-danh-sach-bai-viet">
						<tr id="header-table">
							<td>Tên độc giả</td>
							<td>Email</td>
							<td>Chức năng</td>
						</tr>
						{{#each users1}}	
						<tr>
							<td>{{name}}</td>
							<td>{{email}}</td>
							<td>							
								<button class="btn-xem-bai-viet" onclick="window.location.href='/admin/1/user/{{id}}/delete'"><i class="far fa-trash-alt">
									</i> &nbsp Xoá
								</button>
								<button class="btn-chuc-nang"><i class="fas fa-money-check-alt"></i> &nbsp Gia hạn</button>
							</td>
						</tr>
						{{/each}}		
					</table>
					<button  onclick="window.location.href='/admin/1/user/add/{{id_type2}}'+ '/premium'" class="btn-chuc-nang m-auto" style="margin-left: 190px; width:50px; margin-bottom: 20px; padding-left: 10px"> 
					<i class="fas fa-plus"></i> &nbsp</button>
				</div>
			</div>

			<!-- 	Quản lý độc giả -->
			<div class="QuanLyDocGia panel">
				<p class="TieuDeTrang">Danh sách độc giả</p>
				<div class="data-table">
					<table border="1px" class="table-danh-sach-bai-viet">
						<tr id="header-table">
							<td>Tên độc giả</td>
							<td>Email</td>
							<td>Chức năng</td>
						</tr>
						{{#each users2}}	
						<tr>
							<td>{{name}}</td>
							<td>{{email}}</td>
							<td>
								<button class="btn-xem-bai-viet" onclick="window.location.href='/admin/1/user/{{id}}/edit'">Chỉnh sửa</button>
								<button class="btn-xem-bai-viet" onclick="window.location.href='/admin/1/user/{{id}}/delete'">
									<i class="far fa-trash-alt"></i> &nbsp Xoá
							</button>
							</td>
						</tr>
						{{/each}}									
					</table>
					<button  onclick="window.location.href='/admin/1/user/add/{{id_type2}}'" class="btn-chuc-nang m-auto" style="margin-left: 210px; width:50px; margin-bottom: 20px; padding-left: 10px"> 
					<i class="fas fa-plus"></i> &nbsp</button>
				</div>
			</div>
			<!-- 	Quản lý bài viết -->
			<div class="QuanLyBaiViet panel">
				<p class="TieuDeTrang">Danh sách bài viết</p>
				<div class="data-table">
					<table border="1px" class="table-danh-sach-bai-viet">
						<tr id="header-table">
							<td>STT</td>
							<td>Tên bài viết</td>
							<td>Chuyên mục</td>
							<td>Ngày đăng</td>
							<td>Trạng thái</td>
							<td>Chi tiết</td>
							<td>Xóa</td>
						</tr>
						{{#each articles}}		
						<tr>
							<td>{{id}}</td>
							<td>{{title}}</td>
							<td>{{cname}}</td>
							<td>{{format date_post}}</td>
							<td>{{sname}}</td>
							<td>
								<button class="btn-xem-bai-viet" onclick="window.location.href='/admin/1/{{id}}'">Xem & chỉnh sửa</button>
							</td>
							<td>
								<button type="submit" class="btn-tu-choi" onclick="window.location.href='/admin/1/{{id}}/delete'">
									<i class="fas fa-times"></i>
								</button>
							</td>
						</tr>
						{{/each}}					
					</table>
				</div>

			</div>
			
			<!-- Viết bài mới -->
			<form method="POST">
			<div class="VietBaiDashboard panel">
				<p class="TieuDeTrang">Viết bài</p>
				<p>Tiêu đề bài viết</p>
				<input type="text" name="title" placeholder="Nhập Tiêu Đề Bài Viết" id="tieu-de-bai-viet" style="width: 500px" >
				<p>Tóm tắt</p>
				<textarea id="TomTatBaiDang" name="abstract" style="width: 100%; height: 150px"></textarea>
				<p>Ngày đăng:</p> 
				<input type="date" name="datepost">
				<br>
				<p>Ảnh đại diện</p>
				<input id="HinhMoTa" type="text" name="img" size="55"><br>
				<img id="ImageMoTa" src="http://liststories.com/wp-content/uploads/2014/10/default-img.gif" width="400px" height="auto" >
				<p>Nội dung bài viết</p>
				<textarea name="content" id="NoiDungBaiDang" name="NoiDungBaiDang">{{article.content}}</textarea>
				<p>Chuyên mục</p>
				<select id="chuyen-de-bai-viet" name="namecat">
					<option>Xã hội</option>
					<option>Giải trí</option>
					<option>Sức khoẻ</option>
					<option>Kinh doanh</option>
					<option>Công nghệ</option>
				</select><br>
				<!-- <p>Tag</p>
				<input type="text" name="tag" placeholder="Thêm tag" id="them-tag"><br> -->
				<button type="submit" id="btn-xuat-ban-bai-viet">
					<i class="fas fa-file-export"></i>					
					Xuất bản bài viết
				</button>
			</div>
			</form>

			<!-- Quản lý chuyên mục -->
			<div class="QuanLyChuyenMuc panel">
				<p class="TieuDeTrang">Danh sách chuyên mục</p>
				<div>					
					<button  onclick="window.location.href='/admin/1/category/add'" class="btn-chuc-nang m-auto"> 
						<i class="fas fa-plus"></i> &nbsp Thêm chuyên mục</button>
				</div>
				<!-- chỗ này m dùng dung for để đổ dữ liệu dô nha.mỗi cái data-table là một cái chuyên mục á  -->

				<!-- Tin Xa hoi -->
				{{#each categorys}}
				<div class="data-table ChuyenMucDiv">
					<h4 class="TenChuyenMuc">{{name}}</h4>
					<div class="align-item-center">
						<button class="btn-chuc-nang m-auto" onclick="window.location.href='/admin/1/category/{{id}}/delete'"> 
							<i class="far fa-trash-alt"></i> &nbspXoá chuyên mục
						</button>
						<button  class="btn-chuc-nang m-auto" onclick="window.location.href='/admin/1/category/{{id}}/edit'"> 
							<i class="fas fa-edit"></i> &nbsp Sửa tên chuyên mục
						</button>
					</div>
					
					<table border="1px" class="table-danh-sach-bai-viet table-hover m-5">
						<tr id="header-table">					
							<td>Tên chuyên mục</td>
							<td>Chức năng</td>
						</tr>
						{{#each ../categorys2}}	
						{{#if_equal id_cat  ../id}}				
						<tr>
							<td>{{name}}</td>
							<td>
								<button class="btn-xem-bai-viet" onclick="window.location.href='/admin/1/category2/{{id}}/delete'">
									<i class="far fa-trash-alt"></i> &nbsp Xoá
								</button>
								<button class="btn-xem-bai-viet" onclick="window.location.href='/admin/1/category2/{{id}}/edit'">
								  <i class="fas fa-edit"></i> &nbsp  Chỉnh sửa
								</button>
							</td>
						</tr>
						{{/if_equal}}
						{{/each}}	
					</table>
					<div>					
						<button  onclick="window.location.href='/admin/1/category2/add/{{id}}'" class="btn-chuc-nang m-auto" style="margin-left: 320px; width:50px; margin-bottom: 20px; padding-left: 10px"> 
							<i class="fas fa-plus"></i> &nbsp</button>
						</div>
				</div>
				{{/each}}			
			</div>
			
		</div>
	</div>
	<script type="text/javascript" src="/public/js/DashboardAdmin.js"></script>
	<script type="text/javascript" src="/public/js/GetImage.js"></script>
</body>
</html>